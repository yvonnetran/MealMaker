<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linen"
        tools:context=".ResultActivity">

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/tomatoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:scaleType="center"
            app:srcCompat="@drawable/berry"/>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="20dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="20dp">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_transparent">

                <ImageView
                        android:id="@+id/tvRecipeImage"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="50dp"
                        android:layout_centerHorizontal="true"/>

                <TextView
                        android:id="@+id/tvRecipeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvRecipeImage"
                        android:padding="20dp"
                        android:ems="15"
                        android:textAlignment="center"
                        android:textSize="25sp"/>

                <TextView
                        android:id="@+id/tvAllIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvRecipeName"
                        android:layout_margin="20dp"
                />

                <Button
                        android:id="@+id/btnGetRecipe"
                        android:text="@string/get_recipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tvAllIngredients"
                        android:layout_marginTop="30dp"/>
            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>